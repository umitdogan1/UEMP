{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uemp.org/schemas/certification/uemp-cert-pack.schema.json",
  "title": "UEMP Certification Pack",
  "type": "object",
  "required": ["packVersion", "packId", "profileId", "cases"],
  "additionalProperties": false,
  "properties": {
    "packVersion": { "type": "string", "minLength": 1 },
    "packId": { "type": "string", "minLength": 1 },
    "profileId": { "type": "string", "minLength": 1 },
    "revisionId": { "type": ["string", "null"] },
    "endpoint": { "type": "string", "default": "/api/uemp/validate-native" },
    "notes": { "type": ["string", "null"] },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "fixture", "expect"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "title": { "type": ["string", "null"] },
          "fixture": { "type": "string", "minLength": 1 },
          "expect": {
            "type": "object",
            "required": ["httpStatus", "valid"],
            "additionalProperties": false,
            "properties": {
              "httpStatus": { "type": "integer", "minimum": 100, "maximum": 599 },
              "valid": { "type": "boolean" }
            }
          }
        }
      }
    }
  }
}

