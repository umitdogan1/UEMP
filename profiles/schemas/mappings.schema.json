{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uemp.org/schema/mappings.schema.json",
  "title": "UEMP Profile Artifact: mappings.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["profileId", "mappings", "updatedAt"],
  "properties": {
    "profileId": { "type": "string", "minLength": 1 },
    "updatedAt": { "type": "string", "format": "date-time" },
    "mappings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["uempPath", "nativePath"],
        "properties": {
          "uempPath": { "type": "string", "minLength": 1 },
          "nativePath": { "type": "string", "minLength": 1 },
          "direction": { "type": "string", "enum": ["toUemp", "fromUemp", "bidirectional"], "default": "bidirectional" },
          "required": { "type": "boolean", "default": false },
          "notes": { "type": "string" }
        }
      }
    }
  }
}

